@model Employee;
@inject IEmployeeRepository _empRepo;

    

    <div class="siteForm mt-3">
        <h2>Hello from Create View</h2>

        <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Name" class="col-4"></label>
                <input asp-for="Name" class="form-control col-8"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-4"></label>
                <input asp-for="Email" class="form-control col-8" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Department" class="col-4"></label>
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control col-8">
                    <option value="">Select your department...</option>
                </select>
                <span asp-validation-for="Department"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="text-right">
                <button type="submit" class="btn btn-info ">Create</button>
            </div>

            <div>
                <h4>Total Count: @_empRepo.GetAllEmployees().Count()</h4>
            </div>

        </form>
    </div>