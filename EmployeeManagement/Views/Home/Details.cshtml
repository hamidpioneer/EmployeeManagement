@model HomeDetailsViewModel;

@{
    ViewBag.PageTitle = "Employee's Details";
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img src="~/images/noimage.png" alt="Alternate Text" />

                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Employee Email: @Model.Employee.Email</h4>
                <h4>Employee Department: @Model.Employee.Department</h4>

            </div>

            <div  class="card-footer text-center">
                
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}