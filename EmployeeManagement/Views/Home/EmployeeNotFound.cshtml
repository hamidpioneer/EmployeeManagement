@model int;
@{
    ViewBag.Title = "404! Employee Not Found!";
}

<div class="row mt-3 mb-3">
    <div class="col-6 offset-3 alert alert-danger">
        <h4>404 Not Found Error : </h4>
        <br />
        <h5>
            Employee with ID = @Model cannot be found!
        </h5>
    </div>

</div>
<div class="row">
    <div class="col-6 offset-3 text-center">
        <div class="btn-group">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">See All Employees</a>
        </div>
    </div>
</div>