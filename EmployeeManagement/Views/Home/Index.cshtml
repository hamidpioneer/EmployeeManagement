@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewBag.PageTitle = "Employees List";
}

    <div class="row">
        <div class="card-deck">

            @foreach (var employee in Model)
            {
                string photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.png");

            <div class="col-6">
                <div class="card m-3" id="@employee.Id">
                    <div class="card-header">
                        <h3>@employee.Name</h3>
                    </div>
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" alt="@employee.Name">

                    <div class="card-footer text-center">

                        <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id"
                           class="btn btn-primary">View (ASP-Tag-Helper)</a>


                        <a href="@Url.Action("Details", "Home", new { id = employee.Id })" class="btn btn-primary">View</a>

                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>

                        <a href="#" class="btn btn-primary">Delete</a>
                    </div>

                </div>
            </div>
                
            }


        </div>
    </div>


